{
    "name": "jtsternberg/buddy-cli",
    "description": "CLI tool for interacting with Buddy.works CI/CD pipelines",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "buddy-works/buddy-works-php-api": "^1.4",
        "symfony/console": "^6.0|^7.0",
        "symfony/yaml": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "BuddyCli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BuddyCli\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/buddy"
    ],
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable"
}
